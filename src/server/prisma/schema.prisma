generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Site {
  id                   String           @id @default(cuid())
  name                 String
  location             String?
  emissionLimit        Float
  totalEmissionsToDate Float            @default(0)
  createdAt            DateTime         @default(now())
  updatedAt            DateTime         @updatedAt
  methaneReadings      MethaneReading[]

  @@map("sites")
}

model MethaneReading {
  id        String   @id @default(cuid())
  siteId    String
  value     Float
  timestamp DateTime // Format is 2026-02-11 08:15:30.000

  site Site @relation(fields: [siteId], references: [id])

  @@unique([siteId, timestamp]) // ensures no duplicates for same timestamp which ensures idempotency
  @@index([siteId]) // This is a optimization to quickly calculate the sum of values for a single site, used for updating the total emissions of a site
  @@map("methane_readings")
}
